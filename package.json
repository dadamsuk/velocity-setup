{
  "name": "velocity-setup",
  "version": "1.0.0",
  "description": "CLI tool to scaffold full-stack Next.js applications with Supabase, Drizzle, and comprehensive tooling",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "velocity": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc && npm run copy-templates",
    "copy-templates": "cp -r src/templates dist/",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "dotenv": "^17.2.3",
    "picocolors": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
